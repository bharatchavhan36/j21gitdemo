<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "com.mapping.xml.Teacher" table="Teacher">
       <id name="teacherId" column = "teacher_id" type ="int">
             <generator class= "native"></generator>
       </id>
       <property name = "teacherName" column = "teacher_name" type ="string"/>
       <property name = "teacherAdrs" column = "teacher_adrs" type ="string"/>
    </class>
</hibernate-mapping>